<div class="container">
   <h2 class="title mt-5 mb-5"> <strong> <%= @light.name %> </strong> </h2>

  <div class="furniture">
    <div class="furnitures-pictures ml-5">
      <figure class="icon-cards mt-3">
        <div class="icon-cards__content">
          <div class="icon-cards__item d-flex align-items-center justify-content-center"><img <%= cl_image_tag @light.photo1.key %>  </div>
          <div class="icon-cards__item d-flex align-items-center justify-content-center"><img <%= cl_image_tag @light.photo2.key %>  </div>
          <div class="icon-cards__item d-flex align-items-center justify-content-center"><img <%= cl_image_tag @light.photo3.key %>  </div>

        </div>
      </figure>
    </div>


    <div class="furniture-infos d-block  mt-3 ml-5">
      <p><Strong><%= t('show.categorie') %></Strong></p>
      <p><%= @light.measure %></p>
      <p><Strong><%= t('show.prix') %></Strong></p>
      <p> <%= t('index.prix') %> <%= @light.price %> €/pièce (Hors transport) </p>
      <p><Strong>Service</Strong></p>
      <p> <%= t('index.text') %> </p>
      <p>A unique piece created by <%= @light.designer.name %> </p>

      <div class="icons">
        <% if user_signed_in? %>
          <%= link_to light_path(@light), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class=" link far fa-trash-alt" style="font-size: 20px;color: #132743;"></i>
          <% end  %>
          <%= link_to edit_light_path(@light) do %>
            <i class="fas fa-pen" style="font-size: 17px; color: #132743;"></i>
          <% end %>
        <% else %>
        <% end %>
      </div>
    </div>
    <a class="btn btn-main mt-5" href="../lights">Back</a>
    <a class="btn btn-main mt-5" href="../pages/show">Book now</a>
  </div>
</div>
