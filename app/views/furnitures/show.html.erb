<div class="container">
   <h2 class="title mt-5 mb-5"> <strong> <%= @furniture.name %> </strong> </h2>

  <div class="furniture">
    <div class="furnitures pictures ml-5">
      <figure class="icon-cards mt-3">
        <div class="icon-cards__content">
          <div class="icon-cards__item d-flex align-items-center justify-content-center"><img <%= cl_image_tag @furniture.photo.key, height: 300, width: 400, crop: :fill %>  </div>
          <div class="icon-cards__item d-flex align-items-center justify-content-center"><img src="https://images.unsplash.com/photo-1448697138198-9aa6d0d84bf4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2850&q=80"></div>
          <div class="icon-cards__item d-flex align-items-center justify-content-center"><img src="https://images.unsplash.com/photo-1452457436726-a8e6ea2adf29?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80" alt=""></div>
        </div>
      </figure>

      <div class="checkbox">
        <input class="d-none" id="toggle-animation" type="checkbox" checked />
        <label class="checkbox__checkbox" for="toggle-animation"></label>
        <label class="checkbox__label" for="toggle-animation">Toggle animation</label>
      </div>
    </div>


    <div class="furniture infos d-block  mt-3">
      <p><Strong>Description</Strong></p>
      <p><%= @furniture.description %></p>
      <p><Strong>Measures</Strong></p>
      <p><%= @furniture.measure %></p>
      <p><Strong>Price</Strong></p>
      <p> A partir de <%= @furniture.price %> â‚¬</p>
      <p><Strong>Service</Strong></p>
      <p>Nous vous conseillons blablabla</p>

      <%= link_to furniture_path(@furniture), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class=" link far fa-trash-alt" style="font-size: 20px;"></i>
      <% end  %>
      <%= link_to edit_furniture_path(@furniture) do %>
        <i class="fas fa-pen" style="font-size: 17px;"></i>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= link_to "Back", furnitures_path %>
  </div>
</div>

