<div class="container">

  <div class="cards mt-4">
    <% @furnitures.each do |furniture| %>
      <%= link_to furniture_path(furniture) do %>
        <div class="card mr-2" style="width: 350px; height: 450px;">
          <% if furniture.photo1.attached? %>
            <%= cl_image_tag furniture.photo1.key%>
          <% end %>
          <div class="card-body">
            <div>
              <h5 class="card-title mb-1"><%= furniture.name.capitalize %> </h5>
              <p class="card-title mb-1" style="font-size: 12px"> <%= furniture.category %> </p>
              <p class="card-text"><%= t('index.prix') %> <%= furniture.price %> â‚¬ TTC</p>
            </div>
            <div>

              <i class="fas fa-long-arrow-alt-right "></i>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="mt-5">
    <% if user_signed_in? %>
      <%= link_to 'Add a furniture', new_furniture_path, class: "btn-main" %>
    <% else %>
    <% end %>
  </div>
</div>
<div class="index-text mt-5">
  <div class="text">
    <H2> <%= t('index.text') %>.</H2>
  </div>
</div>

