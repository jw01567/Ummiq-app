<div class="container">
   <h2 class="title mt-5 mb-5"> <strong> <%= @decoration.name %> </strong> </h2>

  <div class="furniture">
    <div class="furnitures pictures ml-5">
      <figure class="icon-cards mt-3">
        <div class="icon-cards__content">
          <div class="icon-cards__item d-flex align-items-center justify-content-center"><img <%= cl_image_tag @decoration.photo1.key %>  </div>
          <div class="icon-cards__item d-flex align-items-center justify-content-center"><img <%= cl_image_tag @decoration.photo2.key %>  </div>
          <div class="icon-cards__item d-flex align-items-center justify-content-center"><img <%= cl_image_tag @decoration.photo3.key %>  </div>
        </div>
      </figure>
    </div>


    <div class="furniture infos d-block  mt-3">
      <p><Strong>Description</Strong></p>
      <p><%= @decoration.description %></p>
      <p><Strong>Measures</Strong></p>
      <p><%= @decoration.measure %></p>
      <p><Strong>Price</Strong></p>
      <p> A partir de <%= @decoration.price %> â‚¬</p>
      <p><Strong>Service</Strong></p>
      <p> <%= t('index.text') %> </p>
      <p>A unique piece created by <%= @furniture.designer.name %> </p>


     <div class="icons">
        <% if user_signed_in? %>
          <%= link_to decoration_path(@decoration), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class=" link far fa-trash-alt" style="font-size: 20px;color: #132743;"></i>
          <% end  %>
          <%= link_to edit_decoration_path(@decoration) do %>
            <i class="fas fa-pen" style="font-size: 17px;color: #132743;"></i>
          <% end %>
        <% else %>
        <% end %>
      </div>
    </div>
  </div>

   <a class="btn btn-main mt-5" href="../decorations">Back</a>

  <a class="btn btn-main" href="#">Book now</a>
</div>
