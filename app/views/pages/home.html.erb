
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class=image> <%= image_tag "Carousel-4.JPG" %></img>
      </div>
      <div class="carousel-item">
        <img class=image> <%= image_tag "Carousel-5.JPG" %></img>
      </div>
      <div class="carousel-item">
        <img class=image> <%= image_tag "Carousel-6.JPG" %></img>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>



  <h1 class="mt-5 ml-5">
   <%= t('home.heart') %>
  </h1>
  <div class="cards">
    <div class="product-cards">
      <%= Furniture.all.sample(3).each do |furniture| %>
        <%= link_to furniture_path(furniture) do %>
            <div class="card mr-2" style="width: 350px; height: 450px;">
              <% if furniture.photo1.attached? %>
                <%= cl_image_tag furniture.photo.key%>
              <% end %>
              <div class="card-body">
                <div>
                  <h5 class="card-title"><%= furniture.name.capitalize %> </h5>
                  <p class="card-text">A partir de <%= furniture.price %> â‚¬</p>
                </div>
                <i class="fas fa-long-arrow-alt-right"></i>
              </div>
            </div>
          <% end %>
        <% end %>
    </div>
  </div>

